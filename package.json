{
  "name": "uxebu",
  "version": "1.0.0",
  "description": "Workshop",
  "main": "index.js",
  "browser": {
    "react": "./src/shim/react.js"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "build": "mkdir -p dist; npm run build:html; npm run build:js",
    "build:watch": "chokidar 'src' -c 'npm run build' ",
    "build:html": "cp src/index.html dist; cp -R vendor/pure-layout-email/css vendor/pure-layout-email/img dist",
    "build:js": "browserify src/index.js --outfile=dist/index.js --transform=babelify",
    "postbuild:js": "uglifyjs dist/index.js -m -c > dist/index.min.js; rm dist/index.js "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "assert": "^1.3.0",
    "babel-core": "^5.6.15",
    "chokidar": "^1.0.3",
    "chokidar-cli": "^0.3.0",
    "mocha": "^2.2.5",
    "sinon": "^1.15.4",
    "travis-encrypt": "^1.1.1",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "classnames": "^2.1.3",
    "react": "^0.13.3"
  }
}
